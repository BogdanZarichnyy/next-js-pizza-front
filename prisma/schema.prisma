generator client {
  provider = "prisma-client-js"
  // output   = "../node_modules/@prisma/client"
  // output   = "generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  fullName String
  email    String   @unique
  password String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Product {
  id       Int      @id @default(autoincrement())
  name     String
  image    String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
